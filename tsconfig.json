{
    "compilerOptions": {
        "outDir": "dist/app",
        "module": "commonjs",
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
          ],
        "lib": ["es2017", "dom"],
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "watch": true,
        "allowJs": true
    },
    "exclude": [
        "docs",
        "node_modules",
        "public",
        "**/*.aot.ts"
    ],
    "filesGlob": [
        "src/**/*.ts"
    ],
    "types": ["jasmine", "webpack-env"]
}